<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/colorlightgrey"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="308dp"
            tools:layout_editor_absoluteX="0dp" tools:ignore="MissingConstraints">
        <TextView
                android:id="@+id/proses"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:maxLength="20"
                android:padding="15dp"
                android:textSize="30sp"
                android:background="@color/colorwhite"
                android:textColor="@color/colorblack"
                android:textStyle="bold"
                android:textAlignment="viewEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/hasil"
                android:layout_below="@id/proses"
                android:layout_centerHorizontal="true"
                android:maxLength="20"
                android:padding="15dp"
                android:textSize="20sp"
                android:background="@color/colorwhite"
                android:textColor="@color/colorblack"
                android:textStyle="normal"
                android:textAlignment="viewEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_below="@id/hasil"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <Button
                        android:text="7"
                        android:background="@drawable/button_number"
                        android:textColor="@color/colorwhite"
                        android:id="@+id/btntujuh"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <Button
                        android:text="8"
                        android:background="@drawable/button_number"
                        android:textColor="@color/colorwhite"
                        android:id="@+id/btndelapan"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <Button
                        android:text="9"
                        android:background="@drawable/button_number"
                        android:textColor="@color/colorwhite"
                        android:id="@+id/btnsembilan"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <Button
                        android:text="/"
                        android:background="@drawable/button_aksi"
                        android:textColor="@color/colorwhite"
                        android:id="@+id/btnbagi"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            <Button
                    android:text="4"
                    android:background="@drawable/button_number"
                    android:textColor="@color/colorwhite"
                    android:id="@+id/btnempat"
                    android:textSize="25sp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            <Button
                    android:text="5"
                    android:background="@drawable/button_number"
                    android:textColor="@color/colorwhite"
                    android:id="@+id/btnlima"
                    android:textSize="25sp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            <Button
                    android:text="6"
                    android:background="@drawable/button_number"
                    android:textColor="@color/colorwhite"
                    android:id="@+id/btnenam"
                    android:textSize="25sp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            <Button
                    android:text="x"
                    android:background="@drawable/button_aksi"
                    android:textColor="@color/colorwhite"
                    android:id="@+id/btnkali"
                    android:textSize="25sp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

        </LinearLayout>

            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <Button
                        android:text="1"
                        android:background="@drawable/button_number"
                        android:textColor="@color/colorwhite"
                        android:id="@+id/btnsatu"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <Button
                        android:text="2"
                        android:background="@drawable/button_number"
                        android:textColor="@color/colorwhite"
                        android:id="@+id/btndua"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <Button
                        android:text="3"
                        android:background="@drawable/button_number"
                        android:textColor="@color/colorwhite"
                        android:id="@+id/btntiga"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <Button
                        android:text="+"
                        android:background="@drawable/button_aksi"
                        android:textColor="@color/colorwhite"
                        android:id="@+id/btntambah"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <Button
                        android:text="."
                        android:background="@drawable/button_number"
                        android:textColor="@color/colorwhite"
                        android:id="@+id/btntitik"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <Button
                        android:text="0"
                        android:background="@drawable/button_number"
                        android:textColor="@color/colorwhite"
                        android:id="@+id/btnnol"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <Button
                        android:text="C"
                        android:background="@drawable/button_number"
                        android:textColor="@color/colorwhite"
                        android:id="@+id/btnhapus"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                <Button
                        android:text="-"
                        android:background="@drawable/button_aksi"
                        android:textColor="@color/colorwhite"
                        android:id="@+id/btnkurang"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                <Button
                        android:text="="
                        android:background="@drawable/button_number"
                        android:textColor="@color/colorwhite"
                        android:id="@+id/btnsamadengan"
                        android:textSize="25sp"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>





            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>